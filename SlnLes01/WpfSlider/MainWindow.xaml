<Window x:Class="WpfSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSlider"
        mc:Ignorable="d"
        Title="Volume Slider" Height="150" Width="600">
    <Grid Background="#FF68AED6" Margin="0,0,0,0">
        <Label x:Name="lblSliderValue" Content="30" HorizontalAlignment="Left" Height="38" Margin="205,62,0,0" VerticalAlignment="Top" Width="80" FontWeight="Bold"/>
        <Slider x:Name="sldVolume" HorizontalAlignment="Left" Height="16" Margin="45,34,0,0" VerticalAlignment="Top" Width="487" FontSize="14" Maximum="100" TickFrequency="5" Value="30" ValueChanged="sldVolume_ValueChanged" IsSnapToTickEnabled="True"/>

    </Grid>     
</Window>
