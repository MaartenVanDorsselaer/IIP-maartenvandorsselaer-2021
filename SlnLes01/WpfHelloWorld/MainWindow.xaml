<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="Hello World" Height="450" Width="800">
    <Grid Background="#FFFDFDAF" Opacity="0.7" RenderTransformOrigin="1.221,0.443">
        <Label x:Name="lblNaam" Content="Hallo, hoe is je naam?" HorizontalAlignment="Left" Height="37" Margin="44,49,0,0" VerticalAlignment="Top" Width="169" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="txtNaam" HorizontalAlignment="Left" Height="29" Margin="44,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="179" FontSize="14"/>
        <Button x:Name="btnConfirm" Content="OK" HorizontalAlignment="Left" Height="29" Margin="255,103,0,0" VerticalAlignment="Top" Width="77" FontSize="14" Click="btnConfirm_Click"/>
        <Button x:Name="btnHerstel" Content="HERSTEL" HorizontalAlignment="Left" Height="29" Margin="357,103,0,0" VerticalAlignment="Top" Width="86" FontSize="14" Click="btnHerstel_Click"/>

    </Grid>
</Window>
