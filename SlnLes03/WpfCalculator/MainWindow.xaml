        <Button x:Name="btnSqrt" Content="SQRT" HorizontalAlignment="Left" Margin="250,170,0,0" VerticalAlignment="Top" Width="38" Height="38" Click="btnSqrt_Click"/>
        <Button x:Name="btn7" Content="7" Tag="7" HorizontalAlignment="Left" Margin="50,220,0,0" VerticalAlignment="Top" Width="38" Height="38" Click="btn1_Click"/>
