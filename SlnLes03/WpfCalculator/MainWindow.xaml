        <Button x:Name="btnSin" Content="SIN" HorizontalAlignment="Left" Margin="250,220,0,0" VerticalAlignment="Top" Width="38" Height="38"/>
        <Button x:Name="btnDot" Content="." HorizontalAlignment="Left" Margin="50,270,0,0" VerticalAlignment="Top" Width="38" Height="38" Click="btnDot_Click"/>
        <Button x:Name="btn0" Content="0" HorizontalAlignment="Left" Margin="100,270,0,0" VerticalAlignment="Top" Width="38" Height="38" Click="btn1_Click"/>
